<?xml version="1.0"?>
<layout>
    <default>
        <reference name="catalog.topnav">
            <block type="hungbd_megamenu/megaMenu" name="catalog.topnav" >
                <block type="page/html_topmenu_renderer" name="catalog.topnav.renderer" template="page/html/topmenu/renderer.phtml"/>
            </block>
        </reference>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/swiper/swiper.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/swiper/swiper.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/smartmenu/jquery.smartmenus.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/swiper/swiper.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/swiper/swiper.min.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/hungbd-filter.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/smartmenu/sm-core-css.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/smartmenu/sm-blue.css</name>
            </action>
        </reference>
    </default>

    <catalog_category_layered>
        <remove name="catalog.leftnav" />
        <remove name="catalog.leftnav.state.renderers" />
        <reference name="content">
            <block type="hungbd_featured/featured" name="hungbd.featured.cateogry"
                   template="mytemplate/featured/categoryslide.phtml"
                   after="-"/>
            <block type="hungbd_bestseller/bestSeller" template="mytemplate/bestseller/categoryslide.phtml"
                   after="hungbd.featured.cateogry"/>
        </reference>
        <reference name="left_first">
            <block type="hungbd_filter/layer_view" name="hungbd.lefnav"
                   template="catalog/layer/view.phtml">
                <block type="core/text_list" name="hungbd.lefnav.state.renderers" as="state_renderers"/>
            </block>
        </reference>
    </catalog_category_layered>

</layout>