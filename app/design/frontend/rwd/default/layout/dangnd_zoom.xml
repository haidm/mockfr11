<?xml version="1.0" encoding="UTF-8" ?>
<layout>
    <catalog_product_view>
        <reference name="product.info.media">
            <action method="setTemplate">
                <template>dangnd/zoom/index.phtml</template>
            </action>
        </reference>
    </catalog_product_view>
    <PRODUCT_TYPE_configurable>
        <reference name="product.info.options.configurable">
            <action method="setTemplate">
                <template>dangnd/label/configurableswatches/configurable.phtml</template>
            </action>
            <block type="core/text_list" name="product.info.options.configurable.renderers" as="attr_renderers">
                <block type="configurableswatches/catalog_product_view_type_configurable_swatches"
                       template="dangnd/label/configurableswatches/swatches.phtml" />
            </block>
            <block type="core/text_list" name="product.info.options.configurable.after" as="after">
                <block type="core/template" template="dangnd/label/configurableswatches/swatch-js.phtml" />
            </block>
        </reference>
    </PRODUCT_TYPE_configurable>
</layout>