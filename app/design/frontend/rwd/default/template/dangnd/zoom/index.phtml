$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
$zoomHeight = $zoomWidth = $mainImgHeight = $mainImgWidth = '500';
if (!empty(Mage::getStoreConfig('myzoom/main_image/height'))) {
    $mainImgHeight = Mage::getStoreConfig('myzoom/main_image/height');
}
if (!empty(Mage::getStoreConfig('myzoom/main_image/width'))) {
    $mainImgWidth = Mage::getStoreConfig('myzoom/main_image/width');
}
if (!empty(Mage::getStoreConfig('myzoom/zoom_image/height'))) {
    $zoomHeight = Mage::getStoreConfig('myzoom/zoom_image/height');
}
if (!empty(Mage::getStoreConfig('myzoom/zoom_image/width'))) {
    $zoomWidth = Mage::getStoreConfig('myzoom/zoom_image/width');
}
?>
<style>
    #myCloudZoom {
        max-height : <?php echo $mainImgHeight ?>px;
        max-width  : <?php echo $mainImgWidth ?>px;
    }

    .cloudzoom-gallery {
        float       : left;
        margin-left : 5px;
    }

    .cloudzoom-gallery-active {
        border : 2px #9baa9b solid;
    }
</style>

<div class="product-image product-image-zoom">
    <div class="product-image-gallery">
        <img id='myCloudZoom' class="cloudzoom"
             src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize($mainImgWidth, $mainImgHeight) ?>"
             data-cloudzoom="zoomImage: '<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize($mainImgWidth*2, $mainImgHeight*2) ?>'"/>
    </div>
</div>

<?php if (count($this->getGalleryImages()) > 0): ?>
    <div class="more-views">
        <h2><?php echo $this->__('More Views') ?></h2>
        <ul class="product-image-thumbs">
            <?php foreach ($this->getGalleryImages() as $_image): ?>
                <?php if ($this->isGalleryImageVisible($_image)): ?>
                    <li>
                        <img class="cloudzoom-gallery"
                             imgsize="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(650, 500) ?>"
                             src="<?php echo $this->helper('catalog/image')->init($_product, 'thumbnail', $_image->getFile())->resize(75) ?>"
                             data-cloudzoom="useZoom: '.cloudzoom',
                             image: '<?php echo $this->helper('catalog/image')->init($_product, 'thumbnail', $_image->getFile())->resize($mainImgWidth, $mainImgHeight) ?>',
                             zoomImage: '<?php echo $this->helper('catalog/image')->init($_product, 'thumbnail', $_image->getFile())->resize(1500, 1500) ?>'"
                             width="75" height="75" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
                    </li>
                <?php endif; ?>
            <?php endforeach; ?>
        </ul>
    </div>
<?php endif; ?>
    <script>
        CloudZoom.quickStart();

        jquery.fn.CloudZoom.defaults.tintColor = '#061EAA';
        jquery.fn.CloudZoom.defaults.tintOpacity = 0.4;
        jquery.fn.CloudZoom.defaults.zoomWidth = <?php echo $zoomWidth ?>;
        jquery.fn.CloudZoom.defaults.zoomHeight = <?php echo $zoomHeight ?>;

        jquery(function () {
            jquery('#myCloudZoom').bind('click', function () {
                var cloudZoom = jquery(this).data('CloudZoom');
                var images = jquery('.cloudzoom-gallery');
                var data = [];
                for (var i = 0; i < images.length; i++) {
                    data.push({src: jquery(images[i]).attr('imgsize'), title: jquery(images[i]).attr('title')});
                }
                cloudZoom.closeZoom();
                console.log(data);
                jquery.fancybox.open(data, {loop: true});
                return false;
            });
        });
    </script>
<?php echo $this->getChildHtml('after'); ?>
