<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
$image_height = Mage::getStoreConfig('general/Hienth_ProductZoom/heightMain');
$image_width = Mage::getStoreConfig('general/Hienth_ProductZoom/widthMain');
$box_height = Mage::getStoreConfig('general/Hienth_ProductZoom/heightBox');
$box_width = Mage::getStoreConfig('general/Hienth_ProductZoom/widthBox');
$thumb_height = Mage::getStoreConfig('general/Hienth_ProductZoom/heightThumb');
$thumb_width = Mage::getStoreConfig('general/Hienth_ProductZoom/widthThumb');
?>
<script type="text/javascript">
    CloudZoom.quickStart();
    $(function(){
        $('#zoom1').bind('click',function(){            // Bind a click event to a Cloud Zoom instance.
            var cloudZoom = $(this).data('CloudZoom');  // On click, get the Cloud Zoom object,
            cloudZoom.closeZoom();
            return false;
        });
    });
</script>

<div class="product-image product-image-zoom">
    <div class="product-image-gallery">
        <img id="zoom1"
             class="cloudzoom"
             src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize($image_width,$image_height) ?>"
             data-cloudzoom='
                     zoomSizeMode: "lens",
                     tintColor:"#000",
                     tintOpacity:0.25,
                     maxMagnification:4,
                     zoomHeight:<?php echo $box_height?>,
                     zoomWidth:<?php echo $box_width?>,
                     autoInside:750
                     '
        />
    </div>
</div>

<?php if (count($this->getGalleryImages()) > 0): ?>
    <div class="more-views">
        <h2><?php echo $this->__('More Views') ?></h2>
        <ul class="product-image-thumbs">
            <?php $i=0; foreach ($this->getGalleryImages() as $_image): ?>
                <?php if ($this->isGalleryImageVisible($_image)): ?>
                    <li>
                        <a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile()); ?>"
                           class="thumb-link">
                            <img class="cloudzoom-gallery"
                                 src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize($thumb_width,$thumb_height); ?>"
                                 alt="<?php echo $this->escapeHtml($this->getImageLabel()); ?>"
                                 data-cloudzoom='
                                     useZoom:"#zoom1",
                                     image:"<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile()); ?>",
                                     zoomImage:"<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile()); ?>"
                            '/>
                        </a>
                    </li>
                <?php endif; ?>
                <?php $i++; endforeach; ?>
        </ul>
    </div>
<?php endif; ?>

<?php echo $this->getChildHtml('after'); ?>
