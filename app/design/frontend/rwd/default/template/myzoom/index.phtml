?>
<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
$mainImgHeight = '500';
$mainImgWidth = '500';
if(!empty(Mage::getStoreConfig('myzoom/main_image/height'))) {
    $mainImgHeight = Mage::getStoreConfig('myzoom/main_image/height');
}
if(!empty(Mage::getStoreConfig('myzoom/main_image/width'))) {
    $mainImgWidth = Mage::getStoreConfig('myzoom/main_image/width');
}
?>
<style>
    #main-image {
        max-height : <?= $mainImgHeight ?>px;
        max-width : <?= $mainImgWidth ?>px;
    }
    .cloudzoom-gallery {
        float : left;
        margin-left : 5px;
    }
    .cloudzoom-gallery-active {
        border : 2px #9baa9b solid;
    }
</style>
<div class="product-image">
        <img id="main-image"
             class="cloudzoom"
             data-cloudzoom = "zoomImage: '<?= $this->helper('catalog/image')->init($_product, 'small_image') ?>'"
             src="<?php echo $this->helper('catalog/image')->init($_product, 'image') ?>"
             alt="<?php echo $this->escapeHtml($this->getImageLabel()) ?>"
             title="<?php echo $this->escapeHtml($this->getImageLabel()); ?>"/>
        <br>
        <?php
        foreach ($this->getGalleryImages() as $_image): ?>
            <?php if ($this->isGalleryImageVisible($_image)): ?>
                <img class = 'cloudzoom-gallery'
                     src = "<?= $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(75) ?>"
                     data-cloudzoom = "useZoom: '.cloudzoom',
                                image: '<?= $this->helper('catalog/image')->init($this->getProduct(), 'small_image') ?>',
                                zoomImage: '<?= $this->helper('catalog/image')->init($this->getProduct(), 'image') ?>'" />
                <?php endif; ?>
            <?php endforeach; ?>

</div>

<script>
    CloudZoom.quickStart();

    $(function () {
        // Bind a click event to a Cloud Zoom instance.
        $('#main-image').bind('click', function () {
            var cloudZoom = $(this).data('CloudZoom');
            cloudZoom.closeZoom();
            console.log(cloudZoom.getGalleryList());
            $.fancybox.open(cloudZoom.getGalleryList());
            return false;
        });
    });
</script>
<?php echo $this->getChildHtml('after'); ?>
