<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
//get list data config in admin
$_image_width =  Mage::getStoreConfig('catalog/product_image_zoom/image_width');
$_image_height =  Mage::getStoreConfig('catalog/product_image_zoom/image_height');
//config image box zoom
$_box_zoom_height =  Mage::getStoreConfig('catalog/product_image_zoom/box_zoom_height');
$_box_zoom_width =  Mage::getStoreConfig('catalog/product_image_zoom/box_zoom_width');
//config image thumbnail
$_height_thumbnail =  Mage::getStoreConfig('catalog/product_image_zoom/height_thumbnail');
$_width_thumbnail =  Mage::getStoreConfig('catalog/product_image_zoom/width_thumbnail');
?>

<head>
    <script type="text/javascript" src="/js/lib/jquery_003.js"></script>
    <script type="text/javascript" src="/js/lib/cloud-zoom.1.0.2.min.js"></script>
    <link href="/skin/frontend/rwd/default/css/cloud-zoom.css" type="text/css" rel="stylesheet">
</head>

<div class="wrap zoom-small-image">
    <a style="position: relative;z-index:1;pointer-events: none;cursor: default;"
       id="zoom1"
       class="cloud-zoom"
       href="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(768,1024) ?>"
       rel="adjustX:20, adjustY:-4,lensWidth:50,zoomPosition:4,lensHeight:300,zoomWidth:<?php echo $_box_zoom_width;?>,zoomHeight:<?php echo $_box_zoom_height;?>">
        <img style="display: block;"
             src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize($_image_width,$_image_height) ?>"
             alt="<?php echo $this->escapeHtml($this->getImageLabel()) ?>"
             title="<?php echo $this->escapeHtml($this->getImageLabel()); ?>"
        />
    </a>
</div>
<div class="more-views">
    <div class="zoom-desc">
    <h2><?php echo $this->__('More Views') ?></h2>
    <ul class="product-image-thumbs">
        <?php $i=0; foreach ($this->getGalleryImages() as $_image): ?>
            <?php if ($this->isGalleryImageVisible($_image)): ?>
                <li>
                    <a  class="cloud-zoom-gallery"
                        href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(768,1024); ?>"
                        rel="useZoom: 'zoom1', smallImage: '<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize($_image_width,$_image_height); ?>' "
                        title="<?php echo $this->escapeHtml($_image->getLabel()) ?>"
                        data-image-index="<?php echo $i; ?>">
                        <img class="zoom-tiny-image"
                             src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize($_width_thumbnail,$_height_thumbnail); ?>"
                             alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
                    </a>
                </li>
            <?php endif; ?>
            <?php $i++; endforeach; ?>
    </ul>
    </div>
</div>
<?php echo $this->getChildHtml('after'); ?>

