<widgets>
    <new_products type="catalog/product_widget_new" translate="name description" module="catalog">
        <parameters>
            <template>
                <required>1</required>
                <visible>1</visible>
                <label>Template</label>
                <type>select</type>
                <value>mytemplate/catalog/product/widget/new/content/new_grid.phtml</value>
                <values>
                    <default translate="label">
                        <value>mytemplate/catalog/product/widget/new/content/new_grid.phtml</value>
                        <label>New Products Grid Template</label>
                    </default>
                    <list translate="label">
                        <value>mytemplate/catalog/product/widget/new/content/new_list.phtml</value>
                        <label>New Products List Template</label>
                    </list>
                </values>
            </template>
        </parameters>
    </new_products>

</widgets>
