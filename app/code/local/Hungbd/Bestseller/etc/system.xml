<config>
    <sections>
        <general>
            <groups>
                <hungbd_bestseller translate="label">
                    <label>Best seller product config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <slider_per_view_home translate="label">
                            <label>Product Per View Home Page</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry validate-digits-range digits-range-4-8</validate>
                            <sort_order>1</sort_order>
                            <comment>Slider should have 4-8 image per view</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </slider_per_view_home>
                        <slider_per_view_category translate="label">
                            <label>Product Per View Category Page</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry validate-digits-range digits-range-3-5</validate>
                            <sort_order>2</sort_order>
                            <comment>Slider should have 3-5 image per view</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </slider_per_view_category>
                        <enable translate="label">
                            <label>Enable Best Seller: </label>
                            <frontend_type>select</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable>
                        <enableoncate translate="label">
                            <label>Enable Slider In Category Page: </label>
                            <frontend_type>select</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enableoncate>

                    </fields>
                </hungbd_bestseller>
            </groups>
        </general>
    </sections>
</config>