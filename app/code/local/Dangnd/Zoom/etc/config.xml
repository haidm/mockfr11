<?xml version="1.0"?>
<config>
    <modules>
        <Dangnd_Zoom>
            <version>0.1.0</version>
        </Dangnd_Zoom>
    </modules>
    <global>
        <models>
            <dangnd_zoom>
                <class>Dangnd_Zoom_Model</class>
                <resourceModel>dangnd_zoom_resource</resourceModel>
            </dangnd_zoom>
            <dangnd_zoom_resource>
                <class>Dangnd_Zoom_Model_Resource</class>
            </dangnd_zoom_resource>
        </models>
        <blocks>
            <dangnd_zoom>
                <class>Dangnd_Zoom_Block</class>
            </dangnd_zoom>
        </blocks>
        <helpers>
            <dangnd_zoom>
                <class>Dangnd_Zoom_Helper</class>
            </dangnd_zoom>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <dangnd_zoom>
                    <file>dangnd_zoom.xml</file>
                </dangnd_zoom>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Dangnd_Zoom before="Mage_Adminhtml">Dangnd_Zoom_Adminhtml</Dangnd_Zoom>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <myzoom>
            <main_image>
                <height>500</height>
                <width>500</width>
            </main_image>
            <zoom_image>
                <height>500</height>
                <width>500</width>
            </zoom_image>
            <thumbnail>
                <height>75</height>
                <width>75</width>
            </thumbnail>
        </myzoom>
    </default>
</config>