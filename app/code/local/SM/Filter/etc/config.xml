<?xml version="1.0"?>
<config>
    <modules>
        <SM_Filter>
            <version>0.1.0</version>
        </SM_Filter>
    </modules>
    <frontend>
        <routers>
            <sm_filter>
                <use>standard</use>
                <args>
                    <module>SM_Filter</module>
                    <frontName>filter</frontName>
                </args>
            </sm_filter>
        </routers>
    </frontend>
    <global>
        <models>
            <sm_filter>
                <class>SM_Filter_Model</class>
                <resourceModel>sm_filter_resource</resourceModel>
            </sm_filter>
            <sm_filter_resource>
                <class>SM_Filter_Model_Resource</class>
            </sm_filter_resource>
        </models>
        <blocks>
            <sm_filter>
                <class>SM_Filter_Block</class>
            </sm_filter>
        </blocks>
        <helpers>
            <sm_filter>
                <class>sm_Filter_Helper</class>
            </sm_filter>
        </helpers>
        <resources>
            <SM_Filter_setup>
                <setup>
                    <module>SM_Filter</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </SM_Filter_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <SM_Filter after="Mage_Adminhtml">SM_Filter_Adminhtml</SM_Filter>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>