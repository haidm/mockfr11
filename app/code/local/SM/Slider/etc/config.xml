<?xml version="1.0"?>
<config>
    <modules>
        <SM_Slider>
            <version>0.1.0</version>
        </SM_Slider>
    </modules>
    <global>
        <models>
            <sm_slider>
                <class>SM_Slider_Model</class>
                <resourceModel>sm_slider_resource</resourceModel>
            </sm_slider>
            <sm_slider_resource>
                <class>SM_Slider_Model_Resource</class>
                <entities>
                    <slider>
                        <table>sm_slider</table>
                    </slider>
                </entities>
                <entities>
                    <image>
                        <table>sm_image</table>
                    </image>
                </entities>
                <entities>
                    <listimage>
                        <table>sm_listimage</table>
                    </listimage>
                </entities>
            </sm_slider_resource>
        </models>
        <blocks>
            <sm_slider>
                <class>SM_Slider_Block</class>
            </sm_slider>
        </blocks>
        <helpers>
            <SM_Slider>
                <class>SM_Slider_Helper</class>
            </SM_Slider>
        </helpers>
        <resources>
            <SM_Slider_setup>
                <setup>
                    <module>SM_Slider</module>
                </setup>
            </SM_Slider_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <SM_Slider after="Mage_Adminhtml">SM_Slider_Adminhtml</SM_Slider>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>